<%= form_with(model: article, local: true, class: "space-y-4") do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Errors:</strong>
      <span class="block sm:inline"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</span>
      <ul class="list-disc pl-5 mt-2">
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field">
    <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field">
    <%= form.label :published, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.check_box :published, class: "leading-tight" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>